<nav class="flex lg:hidden">
  <input type="checkbox" hidden id="check-toggleMenu" class="peer" />
  <label for="check-toggleMenu">
    <svg
      id="button-openMenu"
      class="cursor-pointer"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M4 6h16"></path><path d="M7 12h13"></path><path d="M10 18h10"
      ></path></svg
    >
  </label>
  {/*Overlay que aparecera solo si el menu esta abierto */}
  <div
    id="divOverlay"
    class="min-h-screen w-full absolute inset-0 bg-black/60 opacity-0 invisible transition-all duration-300 lg:hidden"
  >
  </div>
  <div
    class="fixed z-10 inset-0 bg-white flex flex-col w-3/4 md:w-2/5 min-h-screen items-center gap-y-5 pt-12 font-semibold -translate-x-full invisible opacity-0 transition-all duration-300"
    id="menuDespegable"
  >
    {/*Menu a desplegar */}
    <label for="check-toggleMenu">
      <svg
        id="button-closeMenu"
        class="absolute right-5 top-5 cursor-pointer"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M18 6l-12 12"></path><path d="M6 6l12 12"></path></svg
      >
    </label>
    <a class="nav-link text-azul-dg" href="#" title="Inicio">Inicio</a>
    <a class="nav-link" href="#beneficios" title="Beneficios">Beneficios</a>
    <a class="nav-link" href="#revendedores" title="Revendedores"
      >Revendedores</a
    >
    <a class="nav-link" href="#testimonios" title="Testimonios">Testimonios</a>
    <a class="nav-link" href="#servicios" title="Servicios">Servicios</a>
    <a class="nav-link" href="#contacto" title="Contacto">Contacto</a>
    <div class="flex items-center gap-x-2">
      <a
        href="https://www.facebook.com/bateriasdariogiagnoni/"
        title="Facebook Baterías Giagnoni"
        rel="noreferrer"
        target="_blank"
      >
        <svg
          width="30"
          height="30"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="blue"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
          ></path></svg
        >
      </a>
      <a
        href="https://www.instagram.com/bateriasdariogiagnoni"
        title="Instagram Baterías Giagnoni"
        rel="noreferrer"
        target="_blank"
      >
        <svg
          width="30"
          height="30"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="blue"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
          ></path><path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"
