        >
      </a>
    </div>
  </div>
</nav>
<style>
  #check-toggleMenu:checked ~ #menuDespegable {
    @apply translate-x-0 visible opacity-100;
  }
  #check-toggleMenu:checked ~ #divOverlay {
    @apply opacity-100 visible;
  }
</style>
<script>
  let checkToggleMenu = document.getElementById("check-toggleMenu") as HTMLInputElement;
  /**Script para el active link */
  let navLinks = document.querySelectorAll(".nav-link");
  navLinks.forEach((navLink) => {
    navLink.addEventListener("click", () => {
      document.querySelector(".text-azul-dg")?.classList.remove("text-azul-dg");
      navLink.classList.add("text-azul-dg");
      checkToggleMenu.checked = false;
    });
  });
</script>
