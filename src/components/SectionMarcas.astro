---
import SectionContainer from "./SectionContainer.astro";
const swiperItems = [
  {
    imagen:'/images/marcas/logo-adcdelco.webp',
    text:'logo adcdelco'
  },
  {
    imagen:'/images/marcas/logo-bateriasMorbi.webp',
    text:'logo baterias morbi'
  },
  {
    imagen:'/images/marcas/logo-giagnoniHermanos.webp',
    text:'logo giagnoni hermanos'
  },
  {
    imagen:'/images/marcas/logo-moura.webp',
    text:'logo moura'
  },
  {
    imagen:'/images/marcas/logo-sermat.webp',
    text:'logo sermat'
  },
]
---

<SectionContainer class="py-10 xl:py-28 w-full">
  <div class="flex items-center justify-center md:justify-start gap-x-2 md:gap-x-5">
    <h3 class="text-3xl sm:text-5xl md:text-6xl xl:text-7xl">NUESTRAS</h3>
    <h4 class="text-3xl sm:text-5xl md:text-6xl xl:text-7xl">MARCAS</h4>
</div>
  <div class="swiper">
    <div class="swiper-wrapper">
      {
        swiperItems.map((swiperItem) => (
          <div class="swiper-slide">
            <img src={swiperItem.imagen} alt={swiperItem.text} loading="lazy" />
          </div>
        
        ))
      }
    </div>
    <div class="swiper-pagination"></div>
  </div>
</SectionContainer>
<style>
   h4{
    font-family: 'Gobold-noRelleno';
  }
  h3{
    font-family: 'Gobold-relleno';
  }
   .swiper {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .swiper-wrapper{
      margin-block: 50px;
    }

    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
</style>
<script>
  import Swiper from "swiper";
   // import Swiper and modules styles
   import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";
  import { Navigation, Pagination,Autoplay } from "swiper/modules";
  // init Swiper:
  new Swiper(".swiper", {
    // configure Swiper to use modules
    slidesPerView:2,
    spaceBetween:20,
    breakpoints: {
        640: {
          slidesPerView: 3,
          spaceBetween: 20,
        },
        1200:{
          slidesPerView:4,
          spaceBetween:25
        }
    },
    loop:true,
    pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      autoplay:{
        delay:2000
      },
    modules: [Navigation, Pagination,Autoplay],
  });
</script>
